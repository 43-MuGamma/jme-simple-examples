<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useStyles filename="Interface/Styles/panel_styles.xml"/>  
  <useStyles filename="Interface/Styles/ma_button.xml" />
  <useControls filename="nifty-default-controls.xml" />
  
  
    <screen id="null" controller="com.simpleEditor.EditorGuiManager">
    </screen>  
  
  <screen id="start" controller="com.simpleEditor.EditorGuiManager">
    <layer id="layer" childLayout="center">
      <panel width="150px" height="70%" align="left" valign="center" childLayout="vertical" style="panel_style_02" padding="10" >
        <effect>
        <onStartScreen  name="fade" startColor="#0000" endColor="#000f" length="1500"/>
        <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
        </effect>
                
        <panel height="10px" backgroundColor="#2222" padding="10">
          <!-- add your content here -->
        </panel>
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_move" name="button" style="ma_button" label="Move" visibleToMouse="true">
          <interact onRelease="setMoveManipulator()"/>
          </control>              
        </panel>  
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_rotate" name="button" style="ma_button" label="Rotate" visibleToMouse="true">
          <interact onRelease="setRotateManipulator()"/>
          </control>              
        </panel>  
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_scale" name="button" style="ma_button" label="Scale" visibleToMouse="true">
          <interact onRelease="setScaleManipulator()"/>
          </control>              
        </panel>
        
        <panel height="10px" backgroundColor="#2222" padding="10">
          <!-- add your content here -->
        </panel>
          
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_set_local_coords" name="button" style="ma_button" label="Local Coords" visibleToMouse="true">
          <interact onRelease="setLocalCoords()"/>
          </control>              
        </panel>                       
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_set_world_coords" name="button" style="ma_button" label="World Coords" visibleToMouse="true">
          <interact onRelease="setWorldCoords()"/>
          </control>              
        </panel>                               
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_set_view_coords" name="button" style="ma_button" label="View Coords" visibleToMouse="true">
          <interact onRelease="setViewCoords()"/>
          </control>              
        </panel>           
        
        <panel height="10px" backgroundColor="#2222" padding="10">
          <!-- add your content here -->
        </panel>        
                                                                                                                                                                                                                                                            
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_mouse_sel" name="button" style="ma_button" label="Mouse Sel" visibleToMouse="true">
          <interact onRelease="setMouseSelection()"/>
          </control>              
        </panel>   
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_rectangle_sel" name="button" style="ma_button" label="Rectangle Sel" visibleToMouse="true">
          <interact onRelease="setRectangleSelection()"/>
          </control>              
        </panel>   
        
        <panel height="10px" backgroundColor="#2222" padding="10">
          <!-- add your content here -->
        </panel>        
        
         <panel height="30px" align="center" childLayout="vertical">
          <control id="button_normal_sel" name="button" style="ma_button" label="Normal Sel" visibleToMouse="true">
          <interact onRelease="setNormalSelection()"/>
          </control>              
        </panel>                          

         <panel height="30px" align="center" childLayout="vertical">
          <control id="button_additive_sel" name="button" style="ma_button" label="Additive Sel" visibleToMouse="true">
          <interact onRelease="setAdditiveSelection()"/>
          </control>              
        </panel>          
                        
        <panel height="10px" backgroundColor="#2222" padding="10">
          <!-- add your content here -->
        </panel>              
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_set_grid" name="button" style="ma_button" label="Set Grid" visibleToMouse="true">
          <interact onRelease="setGrid()"/>
          </control>              
        </panel>      
                                                                                
      </panel>
      
    </layer>
  </screen>
</nifty>