<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useStyles filename="Interface/Styles/panel_styles.xml"/>  
  <useStyles filename="Interface/Styles/ma_button.xml" />
  <useControls filename="nifty-default-controls.xml" />
  
  
    <screen id="null" controller="com.simpleEditor.EditorGuiManager">
    </screen>  
  
  <screen id="start" controller="com.simpleEditor.EditorGuiManager">
    <layer id="layer" childLayout="center">
      <panel width="150px" height="70%" align="left" valign="center" childLayout="vertical" style="panel_style_02" padding="10" >
        <effect>
        <onStartScreen  name="fade" startColor="#0000" endColor="#000f" length="1500"/>
        <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
        </effect>
                
        <panel height="30px" backgroundColor="#2222" padding="10">
          <!-- add your content here -->
        </panel>
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_move" name="button" style="ma_button" label="Move" visibleToMouse="true">
          <interact onRelease="setMoveManipulator()"/>
          </control>              
        </panel>  
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_rotate" name="button" style="ma_button" label="Rotate" visibleToMouse="true">
          <interact onRelease="setRotateManipulator()"/>
          </control>              
        </panel>  
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button_scale" name="button" style="ma_button" label="Scale" visibleToMouse="true">
          <interact onRelease="setScaleManipulator()"/>
          </control>              
        </panel>
        
          <panel height="30px" align="center" childLayout="vertical">
          <control id="button4" name="button" style="ma_button" label="but4" visibleToMouse="true">
          <interact onRelease="printGo()"/>
          </control>              
        </panel>      
        
      </panel>
      
    </layer>
  </screen>
</nifty>